<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">


    <com.jackrabbitmobile.toned.util.RobotoTextView
        android:id="@+id/unlimited_title"
        android:text="@string/unlimited_access_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <com.jackrabbitmobile.toned.util.RobotoTextView
        android:id="@+id/unlimited_description"
        android:text="@string/unlimited_access_description"
        android:layout_margin="12dp"
        android:textColor="@color/grey_700"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/unlimited_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/unlimited_image"
        android:layout_centerHorizontal="true"
        android:src="@drawable/unlimited_access"
        android:layout_below="@+id/unlimited_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>